<%= form_with(model: message) do |form| %>
  <div class="mb-6">
    <%= form.label :message, "Message:", class:"form-label"%>
    <%= form.text_field :message, placeholder: "Hey there! I'm using Ruby Whatsapp SDK", class:"form-input" %>
  </div>
  <div class="mb-6">
    <%= form.label :sender_number, "Sender number:", class:"form-label" %>
    <%= form.text_field :sender_number, placeholder: "1234567", class:"form-input" %>
  </div>
  <div class="mb-6">
    <%= form.label :recipient_number, "Recipient number:", class:"form-label" %>
    <%= form.text_field :recipient_number, placeholder: "123456789", class:"form-input" %>
  </div>
  <% if message.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(message.errors.count, "error") %> prohibited this message from being saved:</h2>

      <ul>
        <% message.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
